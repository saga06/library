<project xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns="http://maven.apache.org/DECORATION/1.7.0"
         xsi:schemaLocation="http://maven.apache.org/DECORATION/1.7.0 http://maven.apache.org/xsd/decoration-1.7.0.xsd">

    <!-- Use fluido's site template -->
    <skin>
        <groupId>org.apache.maven.skins</groupId>
        <artifactId>maven-fluido-skin</artifactId>
        <version>1.6</version>
    </skin>

    <!-- Display the date and the version on the right -->
    <publishDate position="right"/>
    <version position="right"/>

    <body>
        <!-- Add a breadcrumbs -->
        <breadcrumbs>
            <item name="Accueil" href="index.html"/>
        </breadcrumbs>

        <!-- ===== Menus ===== -->
        <!-- Add a menu to parent's project -->
        <menu ref="parent" inherit="top"/>
        <!-- Add a menu to the differents modules of the projetct -->
        <menu ref="modules" inherit="top"/>
        <menu ref="reports" inherit="top"/>


        <menu name="Documentation">
            <item name="Architecture" href="architecture.html"/>
            <item name="FAQ" href="faq.html"/>
        </menu>
    </body>
</project>